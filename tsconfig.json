{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES2015",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },

  "include": [
    "src/**/*",
    "./declaration.ts"
  ],
  "exclude": [     "node_modules/**"   ]
}
